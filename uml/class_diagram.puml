@startuml

node "User" {
    [Web Browser]
}

node "Nginx Server" {
    [Nuxt Frontend]
}

node "Backend Server" {
    [Flask Application]
}

node "Database Server" {
    [MySQL Database]
}

[Web Browser] --> [Nuxt Frontend] : HTTPS
[Nuxt Frontend] --> [Flask Application] : REST API (HTTP)
[Flask Application] --> [MySQL Database] : SQL Queries (TCP)

@enduml
