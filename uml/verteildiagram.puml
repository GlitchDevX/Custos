@startuml Deployment Diagram
package "Frontend" {
    [Nuxt UI] --> [Nginx]
    [Nginx] --> [REST API]
    [Nginx] --> [Metrics Display]
    [Nginx] --> [API Playground]
}

package "Flask Application" {
    [Flask REST API] --> [Service Logic]
    [Service Logic] --> [MySQL Database]
    [Flask REST API] --> [Swagger UI]
}

package "MySQL Database" {
    [Metrics Storage]
}

[Nuxt UI] --> [Flask REST API] : Configures
[Flask REST API] --> [Metrics Storage] : Writes Metrics
[Flask REST API] --> [Metrics Storage] : Returns Metrics
[Swagger UI] --> [Flask REST API] : Documentation Access
@enduml